{
  "name": "smb3-memory-card-game",
  "version": "1.0.0",
  "description": "Super Mario Bros 3 inspired memory game by @hexagoncircle adapted to work as a fullscreen app",
  "main": "index.html",
  "scripts": {
    "scss": "node-sass --output-style compressed -o css scss",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "build": "npm run scss && npm run autoprefixer",
    "watch": "onchange \"scss\" -- npm run build",
    "serve": "browser-sync start --server --files \"css/*.css, js/*.js, **/*.html, !node_modules/**/*.html\""
  },
  "author": "@johnslipper",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "browser-sync": "^2.18.8",
    "node-sass": "^4.5.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.0.0"
  },
  "private": true
}
